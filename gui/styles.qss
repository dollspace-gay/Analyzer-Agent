/*
Protocol AI - Dark Mode Stylesheet (QSS)
Based on design_tokens.py color palette
*/

/* ============================================================================
   Global Application Styles
   ============================================================================ */

QWidget {
    background-color: #0d1117;
    color: #e6edf3;
    font-family: 'Inter', 'Segoe UI', sans-serif;
    font-size: 13pt;
    selection-background-color: #1f6feb;
    selection-color: #e6edf3;
}

/* ============================================================================
   Main Window
   ============================================================================ */

QMainWindow {
    background-color: #0d1117;
}

QMainWindow::separator {
    background-color: #30363d;
    width: 1px;
    height: 1px;
}

QMainWindow::separator:hover {
    background-color: #58a6ff;
}

/* ============================================================================
   Panels and Containers
   ============================================================================ */

QFrame {
    background-color: #161b22;
    border: 1px solid #30363d;
    border-radius: 6px;
}

QFrame[frameShape="0"] {
    /* No frame */
    border: none;
}

QGroupBox {
    background-color: #161b22;
    border: 1px solid #30363d;
    border-radius: 6px;
    margin-top: 12px;
    padding: 16px;
    font-weight: 600;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    color: #e6edf3;
    background-color: #161b22;
}

/* ============================================================================
   Buttons
   ============================================================================ */

QPushButton {
    background-color: #21262d;
    border: 1px solid #30363d;
    border-radius: 6px;
    color: #e6edf3;
    padding: 8px 16px;
    font-weight: 500;
    min-height: 28px;
}

QPushButton:hover {
    background-color: #30363d;
    border-color: #58a6ff;
}

QPushButton:pressed {
    background-color: #21262d;
}

QPushButton:disabled {
    background-color: #161b22;
    color: #484f58;
    border-color: #21262d;
}

/* Primary Button */
QPushButton[primary="true"] {
    background-color: #238636;
    border-color: #2ea043;
    color: #ffffff;
}

QPushButton[primary="true"]:hover {
    background-color: #2ea043;
}

QPushButton[primary="true"]:pressed {
    background-color: #1a7f37;
}

/* Danger Button */
QPushButton[danger="true"] {
    background-color: #da3633;
    border-color: #f85149;
    color: #ffffff;
}

QPushButton[danger="true"]:hover {
    background-color: #f85149;
}

/* ============================================================================
   Input Fields
   ============================================================================ */

QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #0d1117;
    border: 1px solid #30363d;
    border-radius: 6px;
    color: #e6edf3;
    padding: 8px 12px;
    selection-background-color: #1f6feb;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #58a6ff;
    outline: none;
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
    background-color: #161b22;
    color: #484f58;
}

/* ============================================================================
   Combo Boxes / Dropdowns
   ============================================================================ */

QComboBox {
    background-color: #21262d;
    border: 1px solid #30363d;
    border-radius: 6px;
    color: #e6edf3;
    padding: 8px 12px;
    min-height: 28px;
}

QComboBox:hover {
    border-color: #58a6ff;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: url(:/icons/chevron-down.svg);
    width: 12px;
    height: 12px;
}

QComboBox QAbstractItemView {
    background-color: #161b22;
    border: 1px solid #30363d;
    border-radius: 6px;
    color: #e6edf3;
    selection-background-color: #1f6feb;
    outline: none;
}

/* ============================================================================
   Spin Boxes
   ============================================================================ */

QSpinBox, QDoubleSpinBox {
    background-color: #0d1117;
    border: 1px solid #30363d;
    border-radius: 6px;
    color: #e6edf3;
    padding: 8px 12px;
}

QSpinBox:focus, QDoubleSpinBox:focus {
    border-color: #58a6ff;
}

QSpinBox::up-button, QDoubleSpinBox::up-button {
    background-color: #21262d;
    border-left: 1px solid #30363d;
    border-top-right-radius: 6px;
}

QSpinBox::down-button, QDoubleSpinBox::down-button {
    background-color: #21262d;
    border-left: 1px solid #30363d;
    border-bottom-right-radius: 6px;
}

/* ============================================================================
   Check Boxes and Radio Buttons
   ============================================================================ */

QCheckBox, QRadioButton {
    color: #e6edf3;
    spacing: 8px;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #30363d;
    background-color: #0d1117;
    border-radius: 3px;
}

QRadioButton::indicator {
    border-radius: 8px;
}

QCheckBox::indicator:hover, QRadioButton::indicator:hover {
    border-color: #58a6ff;
}

QCheckBox::indicator:checked, QRadioButton::indicator:checked {
    background-color: #58a6ff;
    border-color: #58a6ff;
}

QCheckBox::indicator:disabled, QRadioButton::indicator:disabled {
    background-color: #161b22;
    border-color: #21262d;
}

/* ============================================================================
   Sliders
   ============================================================================ */

QSlider::groove:horizontal {
    background-color: #21262d;
    height: 4px;
    border-radius: 2px;
}

QSlider::handle:horizontal {
    background-color: #58a6ff;
    width: 16px;
    height: 16px;
    margin: -6px 0;
    border-radius: 8px;
}

QSlider::handle:horizontal:hover {
    background-color: #79c0ff;
}

/* ============================================================================
   Progress Bars
   ============================================================================ */

QProgressBar {
    background-color: #21262d;
    border: 1px solid #30363d;
    border-radius: 6px;
    text-align: center;
    color: #e6edf3;
    height: 20px;
}

QProgressBar::chunk {
    background-color: #58a6ff;
    border-radius: 5px;
}

/* ============================================================================
   Scroll Bars
   ============================================================================ */

QScrollBar:vertical {
    background-color: #0d1117;
    width: 12px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: #30363d;
    border-radius: 6px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background-color: #484f58;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #0d1117;
    height: 12px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background-color: #30363d;
    border-radius: 6px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #484f58;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* ============================================================================
   Tables and Lists
   ============================================================================ */

QTableWidget, QTableView, QListWidget, QListView, QTreeWidget, QTreeView {
    background-color: #0d1117;
    border: 1px solid #30363d;
    border-radius: 6px;
    color: #e6edf3;
    gridline-color: #21262d;
    selection-background-color: #1f6feb;
    outline: none;
}

QTableWidget::item, QTableView::item, QListWidget::item, QListView::item {
    padding: 8px;
    border: none;
}

QTableWidget::item:hover, QTableView::item:hover,
QListWidget::item:hover, QListView::item:hover,
QTreeView::item:hover {
    background-color: #161b22;
}

QTableWidget::item:selected, QTableView::item:selected,
QListWidget::item:selected, QListView::item:selected,
QTreeView::item:selected {
    background-color: #1f6feb;
    color: #ffffff;
}

QHeaderView::section {
    background-color: #161b22;
    color: #e6edf3;
    padding: 8px;
    border: none;
    border-right: 1px solid #30363d;
    border-bottom: 1px solid #30363d;
    font-weight: 600;
}

QHeaderView::section:hover {
    background-color: #21262d;
}

/* ============================================================================
   Tree View (Module Hierarchy)
   ============================================================================ */

QTreeView::branch {
    background-color: #0d1117;
}

QTreeView::branch:has-siblings:!adjoins-item {
    border-image: none;
    border-left: 1px solid #30363d;
}

QTreeView::branch:has-siblings:adjoins-item {
    border-image: none;
    border-left: 1px solid #30363d;
    border-top: 1px solid #30363d;
}

QTreeView::branch:!has-children:!has-siblings:adjoins-item {
    border-image: none;
    border-top: 1px solid #30363d;
}

QTreeView::branch:has-children:!has-siblings:closed,
QTreeView::branch:closed:has-children:has-siblings {
    image: url(:/icons/chevron-right.svg);
}

QTreeView::branch:open:has-children:!has-siblings,
QTreeView::branch:open:has-children:has-siblings {
    image: url(:/icons/chevron-down.svg);
}

/* ============================================================================
   Tab Widget
   ============================================================================ */

QTabWidget::pane {
    background-color: #161b22;
    border: 1px solid #30363d;
    border-radius: 6px;
}

QTabBar::tab {
    background-color: #21262d;
    color: #8b949e;
    padding: 8px 16px;
    border: 1px solid #30363d;
    border-bottom: none;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: #161b22;
    color: #e6edf3;
    border-bottom: 2px solid #58a6ff;
}

QTabBar::tab:hover {
    background-color: #30363d;
    color: #e6edf3;
}

/* ============================================================================
   Tool Bar
   ============================================================================ */

QToolBar {
    background-color: #161b22;
    border-bottom: 1px solid #30363d;
    spacing: 8px;
    padding: 8px;
}

QToolBar::separator {
    background-color: #30363d;
    width: 1px;
    margin: 4px;
}

QToolButton {
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: 6px;
    color: #e6edf3;
    padding: 6px;
}

QToolButton:hover {
    background-color: #21262d;
    border-color: #30363d;
}

QToolButton:pressed {
    background-color: #30363d;
}

/* ============================================================================
   Menu Bar and Menus
   ============================================================================ */

QMenuBar {
    background-color: #161b22;
    color: #e6edf3;
    border-bottom: 1px solid #30363d;
    padding: 4px;
}

QMenuBar::item {
    background-color: transparent;
    padding: 6px 12px;
    border-radius: 6px;
}

QMenuBar::item:selected {
    background-color: #21262d;
}

QMenu {
    background-color: #161b22;
    border: 1px solid #30363d;
    border-radius: 6px;
    padding: 4px;
}

QMenu::item {
    background-color: transparent;
    padding: 8px 24px 8px 12px;
    border-radius: 4px;
    color: #e6edf3;
}

QMenu::item:selected {
    background-color: #1f6feb;
}

QMenu::separator {
    height: 1px;
    background-color: #30363d;
    margin: 4px 8px;
}

/* ============================================================================
   Status Bar
   ============================================================================ */

QStatusBar {
    background-color: #161b22;
    color: #8b949e;
    border-top: 1px solid #30363d;
    padding: 4px 8px;
}

QStatusBar::item {
    border: none;
}

/* ============================================================================
   Tool Tips
   ============================================================================ */

QToolTip {
    background-color: #21262d;
    color: #e6edf3;
    border: 1px solid #30363d;
    border-radius: 6px;
    padding: 6px 8px;
    font-size: 11pt;
}

/* ============================================================================
   Dock Widgets
   ============================================================================ */

QDockWidget {
    titlebar-close-icon: url(:/icons/x.svg);
    titlebar-normal-icon: url(:/icons/maximize.svg);
}

QDockWidget::title {
    background-color: #161b22;
    border: 1px solid #30363d;
    border-radius: 6px 6px 0 0;
    padding: 8px;
    text-align: left;
    font-weight: 600;
}

QDockWidget::close-button, QDockWidget::float-button {
    background-color: transparent;
    border: none;
    border-radius: 4px;
    padding: 4px;
}

QDockWidget::close-button:hover, QDockWidget::float-button:hover {
    background-color: #30363d;
}

/* ============================================================================
   Splitter
   ============================================================================ */

QSplitter::handle {
    background-color: #30363d;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:hover {
    background-color: #58a6ff;
}

/* ============================================================================
   Label Styles
   ============================================================================ */

QLabel {
    color: #e6edf3;
    background-color: transparent;
}

QLabel[heading="h1"] {
    font-size: 24pt;
    font-weight: 700;
}

QLabel[heading="h2"] {
    font-size: 18pt;
    font-weight: 600;
}

QLabel[heading="h3"] {
    font-size: 16pt;
    font-weight: 600;
}

QLabel[secondary="true"] {
    color: #8b949e;
}

QLabel[tertiary="true"] {
    color: #6e7681;
}

/* ============================================================================
   Code/Monospace Elements
   ============================================================================ */

QTextEdit[monospace="true"], QPlainTextEdit[monospace="true"] {
    font-family: 'JetBrains Mono', 'Cascadia Code', 'Consolas', monospace;
    font-size: 12pt;
    line-height: 1.5;
}

/* ============================================================================
   Tier-Specific Styling (for module visualization)
   ============================================================================ */

QWidget[tier="0"] {
    border-left: 3px solid #f0883e;
}

QWidget[tier="1"] {
    border-left: 3px solid #f85149;
}

QWidget[tier="2"] {
    border-left: 3px solid #58a6ff;
}

QWidget[tier="3"] {
    border-left: 3px solid #bc8cff;
}

QWidget[tier="4"] {
    border-left: 3px solid #3fb950;
}
